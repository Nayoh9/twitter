extends ../layout.pug

block content 
    div(class="d-flex flex-row content justify-content-center mx-auto")
        form(class="card" method="post" action="/auth/signin")
            div(class="card-header") Connexion
            div(class="card-body")
                div(class="form-group")
                    label(class="form-label") Email
                    input(class="form-control" type="email" name="email")
                div(class="form-group")
                    label(class="form-label") Password    
                    input(class="form-control" type="password" name="password")
                if errors 
                    ul(class="my-2")
                        each error in errors 
                            li(class="text-danger")= error
                div(class="w-100")
                    input(type="submit" value="Connexion" class="btn btn-primary ms-auto d-block mt-3")
